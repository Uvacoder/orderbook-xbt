{
  "extends": ["airbnb-typescript-prettier"],
  "rules": {
    "react/prop-types": 0,
    "react/jsx-props-no-spreading": "off",
    "import/no-extraneous-dependencies": "off",
    "camelcase": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "env": {
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "."
      },
      "node": {
        "extensions": [".ts", ".tsx", ".native.js"]
      }
    }
  }
}
